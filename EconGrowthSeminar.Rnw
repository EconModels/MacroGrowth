\subsection[Growth Models]{Economic Growth Models} %+++++++++++++++++++++++++++++++++++++++

\begin{frame}{Single Factor} %----------------------------

  \begin{equation*} \label{eq:Single_Factor_Generic}
    y = \mathrm{e}^{\lambda (t-t_0)}f^{m}
  \end{equation*}
  
  \begin{center}
    \begin{tabular}{|c|l|}\hline
      $y$   & $Y$/$Y_0$ \\
      $t$   & year\\
      $t_0$ & initial year\\
      $f$   & $F$/$F_0$, a factor of production\\
      \hline
      $\lambda$   &   technological progress\\
      $m$   &         ``strength'' of factor $f$\\
      \hline
    \end{tabular}
  \end{center}

\end{frame}

\begin{frame}{Example Single-Factor Fit} %----------------------------
  Heun complete
\end{frame}

\begin{frame}{Cobb-Douglas} %----------------------------

  \begin{equation*} \label{eq:CD_With_Energy}
    y = \mathrm{e}^{\lambda (t-t_0)}k^{\alpha}l^{\beta}e^{\gamma}
  \end{equation*}
  
  \begin{equation*} \label{eq:CD_Const_Returns_To_Scale}
    \alpha + \beta + \gamma = 1
  \end{equation*}

  \begin{equation*} \label{eq:CD_Constraints}
    0 \leq \alpha, \beta, \gamma \leq 1
  \end{equation*}

  \begin{center}
    \begin{tabular}{|c|l|}\hline
      $k$   & $K$/$K_0$, capital stock\\
      $l$   & $L$/$L_0$, labor\\
      $e$   & $E$/$E_0$, any of $q$, $x$, or $u$\\
      \hline
      $\lambda$   &   technological progress\\
      $\alpha$   &    ``strength'' of capital\\
      $\beta$   &    ``strength'' of labor\\
      $\gamma$   &    ``strength'' of energy\\
      \hline
    \end{tabular}
  \end{center}

\end{frame}

\begin{frame}{Example Cobb-Douglas Fit} %----------------------------
<<CDeGammaGraphsZA>>=
  cdeGridGraphs("ZA", "Q")
@
\end{frame}


\begin{frame}{Constant Elasticity of Substitution (CES)} %----------------------------

  \begin{equation*} \label{eq:micEconCES_model}
    \begin{split}
    y = & \gamma \mathrm{e}^{\lambda(t-t_0)} \\
        & \cdot \left\{\delta \left[\delta_1 k^{-\rho_1} + (1-\delta_1)l^{-\rho_1} \right]^{\rho/\rho_1} 
                        + (1-\delta) e^{-\rho} \right\}^{-1/\rho}
    \end{split}
  \end{equation*}
  
  \begin{center}
    \begin{tabular}{|c|l|}\hline
      $k$   & $K$/$K_0$, capital stock\\
      $l$   & $L$/$L_0$, labor\\
      $e$   & $E$/$E_0$, any of $q$, $x$, or $u$\\
      \hline
      $\gamma$   &   fitting coefficient\\
      $\lambda$  &   technological progress\\
      $\delta$   &   split between ($kl$) and ($e$)\\
      $\rho$     &   ``strength'' of ($kl$) vs. ($e$)\\
      $\delta_1$   &   split between ($k$) and ($l$)\\
      $\rho_1$     &   ``strength'' of ($k$) vs. ($l$)\\
      \hline
    \end{tabular}
  \end{center}

\end{frame}

\begin{frame}{Example CES Fit} %----------------------------
  Heun complete
\end{frame}

\begin{frame}{LINEX} %----------------------------

  \begin{equation*} \label{eq:LINEX_model}
    y = e \: \mathrm{e}^{\left[a_0 \left(2 - \frac{l + e}{k} \right) + a_0 c_t \left(\frac{l}{e} - 1 \right)\right]}
  \end{equation*}
  
  \begin{center}
    \begin{tabular}{|c|l|}\hline
      $k$   & $K$/$K_0$, capital stock\\
      $l$   & $L$/$L_0$, labor\\
      $e$   & $E$/$E_0$, any of $q$, $x$, or $u$\\
      \hline
      $a_0$   &   fitting parameter\\
      $c_t$   &   fitting parameter\\
      \hline
    \end{tabular}
  \end{center}

\end{frame}

